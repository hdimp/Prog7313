<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0B1F"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Recurrence Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recurrence Type"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/recurrenceGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rbDaily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily"
                android:textColor="#FFFFFF" />

            <RadioButton
                android:id="@+id/rbWeekly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekly"
                android:textColor="#FFFFFF"
                android:layout_marginStart="16dp" />

            <RadioButton
                android:id="@+id/rbMonthly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly"
                android:textColor="#FFFFFF"
                android:layout_marginStart="16dp" />

            <RadioButton
                android:id="@+id/rbYearly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yearly"
                android:textColor="#FFFFFF"
                android:layout_marginStart="16dp" />
        </RadioGroup>

        <!-- Start Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/editStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select start date"
            android:inputType="none"
            android:focusable="false"
            android:backgroundTint="#7B5CE1"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Start Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Time"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/editStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select start time"
            android:inputType="none"
            android:focusable="false"
            android:backgroundTint="#7B5CE1"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- End Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Date"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/editEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select end date"
            android:inputType="none"
            android:focusable="false"
            android:backgroundTint="#7B5CE1"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- End Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Time"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/editEndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select end time"
            android:inputType="none"
            android:focusable="false"
            android:backgroundTint="#7B5CE1"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmitRecurring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="#FFFFFF"
            android:backgroundTint="#7B5CE1"
            android:background="@drawable/rounded_button" />

    </LinearLayout>
</ScrollView>
